#include "Arduino_H7_Video.h"
#include "Arduino_GigaDisplayTouch.h"

#include "lvgl.h"
#include "ui.h"

/* Insert resolution WxH according to your SquareLine studio project settings */
Arduino_H7_Video          Display(800, 480, GigaDisplayShield); 
Arduino_GigaDisplayTouch  Touch;

//
#define analogPin A0
#define UPDATE_INTERVAL 250  // Update interval in milliseconds (e.g., 1000 ms = 1 second)

float VDD = 3.3;
//

// Declare a global counter variable
volatile int counter = 0;
unsigned long last_update_time = 0; // Last time the display was updated

void setup() {
  Serial.begin(9600);
  Display.begin();
  Touch.begin();

  ui_init();
  lv_obj_add_event_cb(ui_increaseBTN, increaseBTN, LV_EVENT_PRESSED, NULL);
  lv_obj_add_event_cb(ui_decreaseBTN, decreaseBTN, LV_EVENT_PRESSED, NULL);


}

// Function to increment the counter
static void increaseBTN(lv_event_t *event) {
    counter++;
    Serial.print("Counter incremented: ");
    Serial.println(counter);
}

// Function to decrement the counter
void decreaseBTN(lv_event_t *event) {
    counter--;
    Serial.print("Counter decremented: ");
    Serial.println(counter);
}


void loop() {
  int sensorValue = analogRead(analogPin);

  float mappedVoltage = sensorValue/(1023/VDD);

  //int mappedVoltage = map(sensorValue, 0, 1023, 0, VDD);

  int DP = (750 * mappedVoltage / VDD) - 150;

  if (DP < 0) {
    DP = 0;
  }

  float windSpeed = sqrt(2 * DP / (1.204));
  /* Feed LVGL engine */
  lv_timer_handler();


  //Print to the Display Shield
  lv_label_set_text_fmt(ui_AnalogLabel, "Analog value: %d", sensorValue);
  lv_label_set_text_fmt(ui_DifferentialLabel, "Differential Pressure: %d", DP); 
  lv_label_set_text_fmt(ui_speedLabel, "Wind Speed: %d", int(windSpeed)); 

  // Print the value to the Serial Monitor
  Serial.print("Analog value: ");
  Serial.println(sensorValue);
  //Serial.println(mappedVoltage);
  Serial.print("Differential Pressure: ");
  Serial.println(DP);
  Serial.print("Calculated Wind Speed: ");
  Serial.println(windSpeed);

  
  // Wait a bit before the next loop
  delay(150); // Delay in milliseconds
}
